{% extends 'layout.html.twig' %}

{% block content %}

<h1>Login</h1>

{% if error %}
	<div class="alert alert-danger">ERROR: {{ error }}</div>
{% endif %}

<form action="/login_check" method="post">
    <input type="text" name="_username" value="{{ last_username }}" />
    <input type="password" name="_password" value="" />
    <input type="submit" />
</form>

{% endblock %}
